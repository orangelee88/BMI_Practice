<?xml version="1.0" encoding="utf-8"?>
<!-- 類型 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    <!--漸層顏色-->
    <gradient
        android:startColor="#E0F417"
        android:endColor="#35ADE3"
        android:gradientRadius="150dp"
        android:type="radial" />
    <!--<solid android:color="#18506C" />-->

    <!-- 文字與邊框的間距 -->
    <padding
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp"
        android:left="5dp"/>
    <!-- 形狀大小 -->
    <size
        android:width="120dp"
        android:height="180dp" />
    <!-- 邊框線 -->
    <stroke
        android:width="1dp"
        android:color="#F80707"
        android:dashGap="2dp"
        android:dashWidth="5dp" />
</shape>